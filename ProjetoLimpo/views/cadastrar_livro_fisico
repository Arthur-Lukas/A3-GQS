<?php
include_once '../controllers/LivroFisicoController.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $titulo = $_POST['titulo'];
    $autor = $_POST['autor'];
    $lancamento = $_POST['lancamento'];
    $preco = $_POST['preco'];
    $genero_id = $_POST['genero_id'];

    LivroFisicoController::cadastrarLivroFisico($titulo, $autor, $lancamento, $preco, $genero_id);
    echo "<p>Livro cadastrado com sucesso!</p>";
}
?>

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>Cadastrar Livro Físico</title>
</head>
<body>
    <h1>Cadastrar Novo Livro Físico</h1>
    <form method="POST">
        <label for="titulo">Título:</label>
        <input type="text" name="titulo" id="titulo" required>

        <label for="autor">Autor:</label>
        <input type="text" name="autor" id="autor" required>

        <label for="lancamento">Ano de Lançamento:</label>
        <input type="number" name="lancamento" id="lancamento" required>

        <label for="preco">Preço:</label>
        <input type="number" name="preco" id="preco" step="0.01" required>

        <label for="genero_id">ID do Gênero:</label>
        <input type="number" name="genero_id" id="genero_id" required>

        <button type="submit">Cadastrar</button>
    </form>
</body>
</html>